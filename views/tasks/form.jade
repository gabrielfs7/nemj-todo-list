mixin taskForm(task)
    form#formAddBlob(name="addTask",method="post",action="/tasks")
        div(class='row')
            div(class='col-lg-12')
                div(class='row')
                    div(class='col-lg-6')
                        input#inputName(type="text", placeholder="ex. Pay my bills", name="name", value='#{task.name ? task.name : ""}', class='form-control')
                    div(class='col-lg-6')
                        div(class="input-group")
                            input#inputDoUntil(type="text", name="doUntil", value="", class='form-control')
                            span(class="input-group-btn")
                                button.btnTrash(type="submit", class='btn btn-default')
                                    i(class='glyphicon glyphicon-trash')
                                    span(class='clearfix')
                                button.btnSubmit(type="submit", class='btn btn-default')
                                    i(class='glyphicon glyphicon-ok')
                                    span(class='clearfix')